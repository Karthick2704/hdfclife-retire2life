<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Component Dialog"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[image.component]">
    <content
        granite:class="cmp-list__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <mediaFile
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Media File"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <sectionName
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Section Name"
                                                name="./sectionName"/>
                                            <mediafile
                                                granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Media File"
                                                name="./listForm">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <image
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Image"
                                                        value="image"/>
                                                    <audio
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Audio"
                                                        value="audio"/>
                                                    <video
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Video"
                                                        value="video"/>
                                                </items>
                                            </mediafile>
                                            <marginTop
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                name="./isMarginTop"
                                                text="Margin Top"
                                                uncheckedValue="false"
                                                value="{Boolean}true"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </mediaFile>
                    <image
                        granite:class="hide list-option-listfrom-showhide-target"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Image"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <well
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                        <items jcr:primaryType="nt:unstructured">
                                            <imageOption
                                                granite:class="cq-dialog-radio-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                                fieldLabel="Image Option"
                                                name="./imageOption">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-radio-showhide-target=".radio-showhide-target"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <imagePlain
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Image Plain"
                                                        value="imagePlain"/>
                                                    <imageCarousel
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Image Carousel"
                                                        value="imageCarousel"/>
                                                </items>
                                            </imageOption>
                                            <imagePlain
                                                granite:class="hide radio-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhideradiovalue="imagePlain"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <heading
                                                        granite:class="coral-Heading coral-Heading--4"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                        level="{Long}4"
                                                        text="Plain Image fields"/>
                                                    <well
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <image
                                                                granite:class="cmp-image__editor-file-upload"
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                                class="cq-droptarget"
                                                                fieldLabel="Desktop Image"
                                                                fileNameParameter="./fileName"
                                                                fileReferenceParameter="./image"
                                                                mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                                name="./icon"/>
                                                            <mobileImage
                                                                granite:class="cmp-image__editor-file-upload"
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                                class="cq-droptarget"
                                                                fieldLabel="Mobile Image"
                                                                fileNameParameter="./fileName"
                                                                fileReferenceParameter="./mobileImage"
                                                                mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                                name="./icon"/>
                                                            <imageAltText
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldLabel="Image Alt Text"
                                                                name="./imageAltText"/>
                                                        </items>
                                                    </well>
                                                </items>
                                            </imagePlain>
                                            <imageCarousel
                                                granite:class="hide radio-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhideradiovalue="imageCarousel"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <heading
                                                        granite:class="coral-Heading coral-Heading--4"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                        level="{Long}4"
                                                        text="Carousel Image Fields"/>
                                                    <well
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <imageCarousel
                                                                granite:class="cmp-image__editor-file-upload"
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                                class="cq-droptarget"
                                                                fieldLabel="Desktop Image "
                                                                fileNameParameter="./fileName"
                                                                fileReferenceParameter="./imageCarousel"
                                                                mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                                name="./icon"/>
                                                            <imageAltText
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldLabel="Image Carousel Alt Text"
                                                                name="./imageCarouselAltText"/>
                                                            <sectionOneBrandDetails
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                                composite="{Boolean}true"
                                                                fieldLabel="Image Carousel Multifield"
                                                                name="./imageCarouselMultifield"
                                                                renderReadOnly="{Boolean}true">
                                                                <field
                                                                    granite:class="cmp-form-options__editor-item-multifield-composite-item coral-Well"
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                                    name="./imageCarouselMultifield">
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <imageCarousel
                                                                            granite:class="cmp-image__editor-file-upload"
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                                            class="cq-droptarget"
                                                                            fieldLabel="Mobile Image Carousel"
                                                                            fileNameParameter="./fileName"
                                                                            fileReferenceParameter="./mobileImageCarousel"
                                                                            mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                                            name="./icon"/>
                                                                        <mobileImageCarouselAltTxt
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                            fieldLabel="Mobile Image Carousel Alt Text"
                                                                            name="./mobileImageCarouselAltTxt"
                                                                            required="{Boolean}true"/>
                                                                    </items>
                                                                </field>
                                                            </sectionOneBrandDetails>
                                                        </items>
                                                    </well>
                                                </items>
                                            </imageCarousel>
                                        </items>
                                    </well>
                                </items>
                            </column>
                        </items>
                        <granite:data
                            jcr:primaryType="nt:unstructured"
                            isTab="{Boolean}true"
                            showhidetargetvalue="image"/>
                    </image>
                    <audio
                        granite:class="hide list-option-listfrom-showhide-target"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Audio"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        tab-id="author6">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured"/>
                                    </column>
                                </items>
                            </columns>
                        </items>
                        <granite:data
                            jcr:primaryType="nt:unstructured"
                            isTab="{Boolean}true"
                            showhidetargetvalue="audio"/>
                    </audio>
                    <video
                        granite:class="hide list-option-listfrom-showhide-target"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Video"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured"/>
                                    </column>
                                </items>
                            </columns>
                        </items>
                        <granite:data
                            jcr:primaryType="nt:unstructured"
                            isTab="{Boolean}true"
                            showhidetargetvalue="video"/>
                    </video>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
